@using vgoyun.idal.models
@{
    ViewBag.Title = "维构全景-全景源码_720全景_vr全景加盟平台";
    ViewBag.ActiveMenu = "Index";
    ViewBag.SpaceLayout = true;
}

@*头部样式与脚本*@
@section head {
    <link rel="stylesheet" type="text/css" href="/css/banner/swiper-3.4.2.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/animate.min.css" />
    <link rel="stylesheet" href="//at.alicdn.com/t/font_1178410_rk490ye4d8n.css">
    <link rel="stylesheet" type="text/css" href="/css/3d/index.css" />
    <script src="/js/banner/swiper-3.4.2.min.js" type="text/javascript"></script>
    <script src="/js/wow.min.js" type="text/javascript" charset="utf-8"></script>
}

<div class="banner">
    <img src="/images/3d/3Dbanner1.jpg" alt="">
    <div class="banner-about">
        <h2>空间感</h2>
        <p>让全景漫游步步为 "营"</p>
        <p>维构3D实景一站式解决方案</p>
    </div>
</div>

<!-- 3D全景互动漫游 -->
<div class="module-con con1 wander">
    <div class="wrap">
        <div class="title  wow  bounce  rubberBand delay-1s"><h3>3D实景互动漫游</h3></div>
        <div class="module-wander-content">
            <ul>
                <li class="wow slideInRight slow">
                    <div class="wander-pic">
                        <img src="/images/3d/3d-my1.png" alt="">
                    </div>
                    <div class="wander-text">
                        <h4>沉浸式空间漫游行走</h4>
                        <p>还原真实行走路径，随心随意漫游世界</p>
                    </div>
                </li>
                <li class="wow slideInLeft slow">
                    <div class="wander-text">
                        <h4>全方位展示特色空间</h4>
                        <p>自动扫描并生成空间整体模型，细节展示特色</p>
                    </div>
                    <div class="wander-pic"><img src="/images/3d/3d-my2.png" alt=""></div>
                </li>
                <li class="wow slideInRight slow">
                    <div class="wander-pic"><img src="/images/3d/3d-my3.png" alt=""></div>
                    <div class="wander-text">
                        <h4>升级传统营销方案</h4>
                        <p>在空间内通过各类插件与客户深度互动</p>
                    </div>
                </li>
            </ul>

        </div>
    </div>
</div>


<!-- 3D 产品与服务 -->
<div class="module-con con2 module-service">
    <div class="wrap">
        <div class="title  wow  bounce  rubberBand delay-1s"><h3>产品与服务</h3></div>
        <div class="module-service-content">
            <div class="picture-left wow zoomInLeft slow">
                <img src="/images/3d/3d-cp1.png" alt="">
                <div>
                    <h4>三维扫描相机</h4>
                    <p>3D Pro相机 智能化自动化采集空间数据</p>
                </div>
            </div>
            <div class="picture-right ">
                <div class="picture-wrap  wow zoomInDown slow delay-.8s">
                    <img src="/images/3d/3d-cp2.png" alt="">
                    <div class="picture-top">
                        <h4>云端快速建模</h4>
                        <p>自动完成三维建模 高效生成数字化空间</p>
                    </div>
                </div>
                <div class="picture-wrap wow zoomInUp slow delay-.8s">
                    <img src="/images/3d/3d-cp3.png" alt="">
                    <div class="picture-bottom">
                        <h4>一站式解决方案</h4>
                        <p>有需求的客户提供上门服务与定制服务</p>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- 3D 空间数字化流程 -->
<div class="module-con con2 module-space">
    <div class="wrap">
        <div class="title  wow  bounce  rubberBand delay-1s"><h3>空间数字化流程</h3></div>
        <div class="module-space-content">
            <ul class="wow bounceInLeft slow delay-.8s">
                <li class="wow bounceInLeft slow delay-.6s">
                    <i class="beijin">1</i>
                    <i class="iconfont icon-d-copy"></i>
                    <span>现场扫描</span>
                </li>
                <i class="iconfont icon-jiantou-copy-copy-copy"></i>
                <li class="wow bounceInLeft slow delay-.6s">
                    <i class="beijin">2</i>
                    <i class="iconfont icon-shangchuan"></i>
                    <span>数据上传</span>
                </li>
                <i class="iconfont icon-jiantou-copy-copy-copy"></i>
                <li class="wow bounceInLeft slow delay-.7s">
                    <i class="beijin">3</i>
                    <i class="iconfont icon-yunduantongbu"></i>
                    <span>云端处理</span>
                </li>
                <i class="iconfont icon-jiantou-copy-copy-copy"></i>
                <li class="wow bounceInLeft slow delay-.8s">
                    <i class="beijin">4</i>
                    <i class="iconfont icon-duoduanshipei"></i>
                    <span>展示分享</span>
                </li>
            </ul>

        </div>
    </div>
</div>

@*底部脚本*@
@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var mySwiper = new Swiper('.swiper-container', {
                pagination: '.swiper-pagination',
                speed: 1000,
                loop: true,
                autoplay: 10000,
                preventLinksPropagation: false,
                autoplayDisableOnInteraction: false,
                paginationClickable: true,
            })
        })

        //wow插件 页面滚动触发animated.css动画
        if (!(/msie [6|7|8|9]/i.test(navigator.userAgent))) {
            new WOW().init();
        }

        var wow = new WOW({
            boxClass: 'wow',
            animateClass: 'animated',
            offset: 100,
            mobile: true,
            live: true
        });
        wow.init();
    </script>
}