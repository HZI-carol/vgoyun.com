@section scripts{
    <script type="text/javascript">
        $(function () {
            //		轮播
            var mySwiper = new Swiper('#swiper40', {
                direction: 'horizontal',
                loop: true,
                pagination: '.swiper-pagination',
                autoplay: 5000,
                paginationClickable: true,
            })
            $('body').eq(0).css('overflow', 'auto');
            var mySwiper = new Swiper('#swiper1', {
                direction: 'horizontal',
                loop: true,
                pagination: '#swiper1 .swiper-pagination',
                nextButton: '#swiper1 .swiper-button-next',
                prevButton: '#swiper1 .swiper-button-prev',
                autoplay: 5000,
                paginationClickable: true,
                onSlideChangeStart: function () {
                    $('#swiper1 .swiper-slide').addClass("zoomIn");
                },
                onSlideChangeEnd: function () {
                    $('#swiper1 .swiper-slide').removeClass("zoomIn");

                }
            });
            var d_t = $(window).height() - 100;
            $(".product-lm-module").each(function () {
                if ($(this).offset().top < d_t) {
                    $(this).addClass('in')
                }
            })
            var c1 = $(".con1").offset().top - d_t,
                c2 = $(".con2").offset().top - d_t,
                c3 = $(".con3").offset().top - d_t,
                c4 = $(".con4").offset().top - d_t,
                c5 = $(".con5").offset().top - d_t,
                c6 = $(".con6").offset().top - d_t;
            $(window).scroll(function (event) {
                var t = $(document).scrollTop();
                if (t >= c6) {
                    $(".con6").addClass('in')
                }
                if (t >= c5) {
                    $(".con5").addClass('in')
                }
                if (t >= c4) {
                    $(".con4").addClass('in')
                }
                if (t >= c3) {
                    $(".con3").addClass('in')
                }
                if (t >= c2) {
                    $(".con2").addClass('in')
                }
                if (t >= c1) {
                    $(".con1").addClass('in')
                }
            });
        });
        //        地图
        var d_t = $(window).height() - 100;
        var srcoll_h3 = $("#m4").offset().top - d_t,
            srcoll_h4 = $("#m5").offset().top - d_t,
            srcoll_h5 = $("#gn").offset().top - d_t;
        $(window).bind("scroll", function (event) {
            var scroll_top = $(document).scrollTop();
            if (scroll_top >= srcoll_h3) {
                // $("#m4 .m4-2").delay(200).fadeIn(1000);
                // $("#m4 .m4-3").delay(400).fadeIn(1000);
                // $("#m4 .m4-4").delay(600).fadeIn(1000);
                // $("#m4 .m4-5").delay(800).fadeIn(1000);
                // $("#m4 .m4-6").delay(1000).fadeIn(1000);
                // $("#m4 .m4-7").delay(1200).fadeIn(1000);
            }
            if (scroll_top >= srcoll_h4) {
                $("#m5 .merit-box .m-bg1").delay(100).animate({ "top": "0" });
                $("#m5 .merit-box .m-bg2").delay(200).animate({ "top": "0" });
                $("#m5 .merit-box .m-bg3").delay(300).animate({ "top": "0" });
                $("#m5 .merit-box .m-bg4").delay(400).animate({ "top": "0" });
                $("#m5 .merit-box .m-bg5").delay(500).animate({ "top": "0" });
                $("#m5").addClass('in')
            }
            if (scroll_top >= srcoll_h5) {
                $(".pro-m1-box1 .box-con").delay(100).animate({ "left": "220px", opacity: 1 });
                $(".pro-m1-box2 .box-con").delay(200).animate({ "left": "260px", opacity: 1 });
                $(".pro-m1-box3 .box-con").delay(300).animate({ "top": "80px", "left": "260px", opacity: 1 });
                $(".pro-m1-box4 .box-con").delay(400).animate({ "left": "-350px", opacity: 1 });
                $(".pro-m1-box5 .box-con").delay(300).animate({ "left": "-290px", opacity: 1 });
                $(".pro-m1-box6 .box-con").delay(200).animate({ "left": "-200px", opacity: 1 });
            }
        });
        $(".pro-m1-box1 img").hover(function () {
            $(".pro-m1-box1 .box-img").animate({ "top": "-20px" });
        }, function () {
            $(".pro-m1-box1 .box-img").animate({ "top": "0" });
        });

        $(".pro-m1-box2 img").hover(function () {
            $(".pro-m1-box2 .box-img").animate({ "top": "-10px", "left": "20px" });
        }, function () {
