@section scripts {
    <script type="text/javascript">
        //wow插件 页面滚动触发animated.css动画
        if (!(/msie [6|7|8|9]/i.test(navigator.userAgent))) {
            new WOW().init();
        }
        var wow = new WOW({
            boxClass: 'wow',
            animateClass: 'animated',
            offset: 100,
            mobile: true,
            live: true
        });
        wow.init();


        // 关于我们 页面滚动事件
        $(function () {
            $(".about-banner").addClass('in')
            var d_t = $(window).height() - 100;
            $(".about_d").each(function () {
                if ($(this).offset().top < d_t) {
                    $(this).addClass('in')
                }
            })
            var c1 = $("#about1").offset().top - d_t,
                c2 = $("#about2").offset().top - d_t,
                c3 = $("#about3").offset().top - d_t,
                c4 = $("#about4").offset().top - d_t,
                c5 = $("#about5").offset().top - d_t;
            $(window).bind("scroll", function (event) {
                var scroll_top = $(document).scrollTop();
                if (scroll_top >= c5) {
                    $("#about5").addClass('in')
                }
                if (scroll_top >= c4) {
                    $("#about4").addClass('in')
                }
                if (scroll_top >= c3) {
                    $("#about3").addClass('in')
                }
                if (scroll_top >= c2) {
                    $("#about2").addClass('in')
                }
                if (scroll_top >= c1) {
                    $("#about1").addClass('in')
                }

                if (scroll_top > $("#about1").offset().top - 200) {
                    $(".about-nav .banner-tab a:eq(0)").addClass('active').siblings('').removeClass('active')
                }
                if (scroll_top > $("#about2").offset().top - 200) {
                    $(".about-nav .banner-tab a:eq(1)").addClass('active').siblings('').removeClass('active')
                }
                if (scroll_top > $("#about3").offset().top - 200) {
                    $(".about-nav .banner-tab a:eq(2)").addClass('active').siblings('').removeClass('active')
                }
                if (scroll_top > $("#about4").offset().top - 200) {
                    $(".about-nav .banner-tab a:eq(3)").addClass('active').siblings('').removeClass('active')
                }
                if (scroll_top > $("#about5").offset().top - 200) {
                    $(".about-nav .banner-tab a:eq(4)").addClass('active').siblings('').removeClass('active')
                }
            });
            //导航条点击跳转页面元素事件
            $(".banner-tab a").click(function () {
                var go = $(this).index() + 1;
                $(this).addClass('active').siblings('').removeClass('active')
                var top = $("#about" + go).offset().top - 190;
                $('body,html').animate({
                    scrollTop: top
                }, 500);
            });
            //导航条吸附头部导航事件
            $(window).bind("scroll", function (event) {
                var scroll_top = $(document).scrollTop();
                var about_top = 380

                if (scroll_top > about_top) {
                    $(".about-nav").addClass("in")
                } else if (scroll_top <= about_top) {
                    $(".about-nav").removeClass('in')
                }
            });

        });

        (function () {
            //注册插件
            Vue.use(VueLoading)
            new Vue({
                el: ".module-con-contact",
                data: {
                    name: "",
                    phone: "",
                    remark: ""
                },
                created: function () {
                    var self = this
                    var loading = null;
                    $.ajaxSetup({
                        beforeSend: function (jqXHR, settings) {
                            loading = self.$loading.show();
                        },
                        complete: function (jqXHR, textStatus) {
                            loading.hide();
                        }
                    })
                },
                methods: {
                    submit: function () {
                        var self = this
                        if (!this.name) {
                            alert("请输入姓名");
                            return
                        }
                        if (!this.phone) {
                            alert("请输入手机号");
                            return
                        }
                        if (!/^1[3456789]\d{9}$/.test(this.phone)) {
                            alert("手机号码格式不正确");
                            return
                        }
                        $.ajax({
                            type: 'POST',
                            url: '/api/web/intentions',
                            dataType: "json",
                            data: {
                                name: self.name,
                                phone: self.phone,
                                remark: self.remark,
                                intentions: [4]
                            },
                            success: function (data) {
                                if (data.code == 200) {
                                    alert("提交成功");
                                    location.reload();
                                } else {
                                    alert(data.msg);
                                }
                            }
                        })
                    }
                }
            });
        })();
    </script>
}